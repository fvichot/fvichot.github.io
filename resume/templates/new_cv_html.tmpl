<div id="education" class="section">
  <div class="section-header"><h2 class="headline text-dark">{{ education.headline }}</h2></div>
  <div class="section-item-highlights">
    <ul>
      {% for item in education.highlights %}
      <li>{{ item|linkify }}</li>
      {% endfor %}
    </ul>
  </div>
</div>

<!-- ============================================================================ -->

<div class="section">
  <div class="section-header"><h2 class="headline text-dark">{{ publications.headline }}</h2></div>

  {% for item in publications.entries %}
  <div class="section-item" id="article_inria">
    <div class="column section-item-content col-12">
      <span class="section-item-title">{{ item.title|linkify }}</span><span class="section-item-location">{{ item.publisher }}</span><span class="section-item-date">{{ item.date }}</span>
      <div>
        <div class="pub-authors">{{ publications.authors }}: {{ item.authors }}</div>
        <blockquote class="pub-abstract">{{ item.abstract }}</blockquote>
      </div>
    </div>
  </div>
  {% endfor %}

</div>

